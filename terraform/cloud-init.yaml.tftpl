#cloud-config
ssh_pwauth: no

users:
  - name: ivan
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    ssh_authorized_keys:
      - ssh-rsa  risenfrost@Air-Ivan.lan

  - name: stas
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    ssh_authorized_keys:
      - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIP7qH23GH06cTRmuABd0pM1GtPZNT75iP0JjTcvXNDih stas_@TatarJesus


package_update: true
package_upgrade: true

apt:
  sources:
    docker:
      source: "deb [arch=amd64 signed-by=/etc/apt/trusted.gpg.d/docker.gpg] https://download.docker.com/linux/ubuntu $RELEASE stable"
      keyid: 7EA0A9C3F273FCD8
      keyserver: keyserver.ubuntu.com

packages:
  - docker-ce
  - docker-ce-cli
  - containerd.io

runcmd:
  - curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo tee /etc/apt/trusted.gpg.d/docker.gpg
  - apt-get update
  - apt-get install -y docker-ce docker-ce-cli containerd.io
  - systemctl enable docker
  - systemctl start docker

final_message: "Docker установлен и запущен успешно!"
